<Application x:Class="SWTORStarter.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             StartupUri="MainWindow.xaml"
             DispatcherUnhandledException="App_DispatcherUnhandledException">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Material Design 3 Dark Theme -->
                <materialDesign:BundledTheme BaseTheme="Dark" PrimaryColor="Blue" SecondaryColor="Orange" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Defaults.xaml" />
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Custom Material Design 3 Dark Theme Colors -->
            <SolidColorBrush x:Key="MaterialPaper" Color="#121212"/>
            <SolidColorBrush x:Key="MaterialBackground" Color="#0A0A0A"/>
            <SolidColorBrush x:Key="MaterialSurface" Color="#1E1E1E"/>
            <SolidColorBrush x:Key="MaterialSurfaceVariant" Color="#2D2D2D"/>
            <SolidColorBrush x:Key="MaterialOutline" Color="#3D3D3D"/>
            <SolidColorBrush x:Key="MaterialOutlineVariant" Color="#4D4D4D"/>
            
            <!-- Primary Colors -->
            <SolidColorBrush x:Key="Primary" Color="#2196F3"/>
            <SolidColorBrush x:Key="PrimaryVariant" Color="#1976D2"/>
            <SolidColorBrush x:Key="OnPrimary" Color="#FFFFFF"/>
            
            <!-- Secondary Colors -->
            <SolidColorBrush x:Key="Secondary" Color="#FF9800"/>
            <SolidColorBrush x:Key="SecondaryVariant" Color="#F57C00"/>
            <SolidColorBrush x:Key="OnSecondary" Color="#000000"/>
            
            <!-- Status Colors -->
            <SolidColorBrush x:Key="Success" Color="#4CAF50"/>
            <SolidColorBrush x:Key="Warning" Color="#FF9800"/>
            <SolidColorBrush x:Key="Error" Color="#F44336"/>
            <SolidColorBrush x:Key="Info" Color="#2196F3"/>
            
            <!-- Text Colors -->
            <SolidColorBrush x:Key="OnSurface" Color="#FFFFFF"/>
            <SolidColorBrush x:Key="OnSurfaceVariant" Color="#B3B3B3"/>
            <SolidColorBrush x:Key="OnBackground" Color="#FFFFFF"/>
            
            <!-- Custom Styles -->
            <Style x:Key="MaterialCard" TargetType="Border">
                <Setter Property="Background" Value="{StaticResource MaterialSurface}"/>
                <Setter Property="BorderBrush" Value="{StaticResource MaterialOutline}"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="CornerRadius" Value="16"/>
                <Setter Property="Padding" Value="24"/>
                <Setter Property="Effect">
                    <Setter.Value>
                        <DropShadowEffect Color="Black" 
                                        Direction="270" 
                                        ShadowDepth="8" 
                                        Opacity="0.4" 
                                        BlurRadius="20"/>
                    </Setter.Value>
                </Setter>
            </Style>
            
            <Style x:Key="MaterialButton" TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
                <Setter Property="Background" Value="{StaticResource Primary}"/>
                <Setter Property="Foreground" Value="{StaticResource OnPrimary}"/>
                <Setter Property="BorderBrush" Value="{StaticResource PrimaryVariant}"/>
                <Setter Property="BorderThickness" Value="2"/>
                <Setter Property="Padding" Value="32,16"/>
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="Height" Value="56"/>
                <Setter Property="Cursor" Value="Hand"/>
            </Style>
            
            <Style x:Key="MaterialSecondaryButton" TargetType="Button" BasedOn="{StaticResource MaterialDesignOutlinedButton}">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="Foreground" Value="{StaticResource Primary}"/>
                <Setter Property="BorderBrush" Value="{StaticResource Primary}"/>
                <Setter Property="BorderThickness" Value="2"/>
                <Setter Property="Padding" Value="24,12"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="FontWeight" Value="Medium"/>
                <Setter Property="Height" Value="48"/>
                <Setter Property="Cursor" Value="Hand"/>
            </Style>
            
            <Style x:Key="MaterialTextBox" TargetType="TextBox" BasedOn="{StaticResource MaterialDesignOutlinedTextBox}">
                <Setter Property="Background" Value="{StaticResource MaterialSurfaceVariant}"/>
                <Setter Property="Foreground" Value="{StaticResource OnSurface}"/>
                <Setter Property="BorderBrush" Value="{StaticResource MaterialOutline}"/>
                <Setter Property="BorderThickness" Value="2"/>
                <Setter Property="Padding" Value="16,12"/>
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="Height" Value="56"/>
            </Style>
            
            <Style x:Key="MaterialPasswordBox" TargetType="PasswordBox" BasedOn="{StaticResource MaterialDesignOutlinedPasswordBox}">
                <Setter Property="Background" Value="{StaticResource MaterialSurfaceVariant}"/>
                <Setter Property="Foreground" Value="{StaticResource OnSurface}"/>
                <Setter Property="BorderBrush" Value="{StaticResource MaterialOutline}"/>
                <Setter Property="BorderThickness" Value="2"/>
                <Setter Property="Padding" Value="16,12"/>
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="Height" Value="56"/>
            </Style>
            
            <Style x:Key="MaterialProgressBar" TargetType="ProgressBar" BasedOn="{StaticResource MaterialDesignLinearProgressBar}">
                <Setter Property="Background" Value="{StaticResource MaterialSurfaceVariant}"/>
                <Setter Property="Foreground" Value="{StaticResource Primary}"/>
                <Setter Property="Height" Value="8"/>
            </Style>
            
            <Style x:Key="MaterialTextBlock" TargetType="TextBlock">
                <Setter Property="Foreground" Value="{StaticResource OnSurface}"/>
                <Setter Property="TextWrapping" Value="Wrap"/>
            </Style>
            
            <Style x:Key="MaterialTextBlockSecondary" TargetType="TextBlock" BasedOn="{StaticResource MaterialTextBlock}">
                <Setter Property="Foreground" Value="{StaticResource OnSurfaceVariant}"/>
            </Style>
            
            <Style x:Key="MaterialTextBlockPrimary" TargetType="TextBlock" BasedOn="{StaticResource MaterialTextBlock}">
                <Setter Property="Foreground" Value="{StaticResource Primary}"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
