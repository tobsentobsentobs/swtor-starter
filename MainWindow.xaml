<Window x:Class="SWTORStarter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:SWTORStarter"
        xmlns:converters="clr-namespace:SWTORStarter.Converters"
        xmlns:controls="clr-namespace:SWTORStarter.Controls"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="SWTOR Starter" Height="800" Width="1200"
        WindowStartupLocation="Manual"
        Left="0"
        Background="{StaticResource MaterialBackground}"
        Foreground="{StaticResource OnSurface}"
        FontSize="14"
        WindowStyle="None"
        ResizeMode="CanResize"
        ShowInTaskbar="True"
        Topmost="False"
        Visibility="Visible"
        IsEnabled="True"
        Loaded="Window_Loaded"
        AllowsTransparency="True"
        MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
    
    <Window.Resources>
        <!-- Converters -->
        <converters:StatusColorConverter x:Key="StatusColorConverter"/>
        <converters:StatusIconConverter x:Key="StatusIconConverter"/>
        <converters:StatusTextConverter x:Key="StatusTextConverter"/>
        
        <!-- Custom Material Design 3 Dark Theme Colors -->
        <SolidColorBrush x:Key="MaterialPaper" Color="#121212"/>
        <SolidColorBrush x:Key="MaterialBackground" Color="#0A0A0A"/>
        <SolidColorBrush x:Key="MaterialSurface" Color="#1E1E1E"/>
        <SolidColorBrush x:Key="MaterialSurfaceVariant" Color="#2D2D2D"/>
        <SolidColorBrush x:Key="MaterialOutline" Color="#3D3D3D"/>
        <SolidColorBrush x:Key="MaterialOutlineVariant" Color="#4D4D4D"/>
        
        <!-- Primary Colors -->
        <SolidColorBrush x:Key="Primary" Color="#2196F3"/>
        <SolidColorBrush x:Key="PrimaryVariant" Color="#1976D2"/>
        <SolidColorBrush x:Key="OnPrimary" Color="#FFFFFF"/>
        
        <!-- Secondary Colors -->
        <SolidColorBrush x:Key="Secondary" Color="#FF9800"/>
        <SolidColorBrush x:Key="SecondaryVariant" Color="#F57C00"/>
        <SolidColorBrush x:Key="OnSecondary" Color="#000000"/>
        
        <!-- Status Colors -->
        <SolidColorBrush x:Key="Success" Color="#4CAF50"/>
        <SolidColorBrush x:Key="Warning" Color="#FF9800"/>
        <SolidColorBrush x:Key="Error" Color="#F44336"/>
        <SolidColorBrush x:Key="Info" Color="#2196F3"/>
        
        <!-- Text Colors -->
        <SolidColorBrush x:Key="OnSurface" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="OnSurfaceVariant" Color="#B3B3B3"/>
        <SolidColorBrush x:Key="OnBackground" Color="#FFFFFF"/>
        
        <!-- Custom Styles -->
        <Style x:Key="MaterialCard" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource MaterialSurface}"/>
            <Setter Property="BorderBrush" Value="{StaticResource MaterialOutline}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Padding" Value="24"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" 
                                    Direction="270" 
                                    ShadowDepth="8" 
                                    Opacity="0.4" 
                                    BlurRadius="20"/>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="MaterialButton" TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
            <Setter Property="Background" Value="{StaticResource Primary}"/>
            <Setter Property="Foreground" Value="{StaticResource OnPrimary}"/>
            <Setter Property="BorderBrush" Value="{StaticResource PrimaryVariant}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="32,16"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Height" Value="56"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        
        <Style x:Key="MaterialSecondaryButton" TargetType="Button" BasedOn="{StaticResource MaterialDesignOutlinedButton}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource Primary}"/>
            <Setter Property="BorderBrush" Value="{StaticResource Primary}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="24,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Height" Value="48"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        
        <Style x:Key="MaterialTextBox" TargetType="TextBox" BasedOn="{StaticResource MaterialDesignOutlinedTextBox}">
            <Setter Property="Background" Value="{StaticResource MaterialSurfaceVariant}"/>
            <Setter Property="Foreground" Value="{StaticResource OnSurface}"/>
            <Setter Property="BorderBrush" Value="{StaticResource MaterialOutline}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Height" Value="56"/>
        </Style>
        
        <Style x:Key="MaterialPasswordBox" TargetType="PasswordBox" BasedOn="{StaticResource MaterialDesignOutlinedPasswordBox}">
            <Setter Property="Background" Value="{StaticResource MaterialSurfaceVariant}"/>
            <Setter Property="Foreground" Value="{StaticResource OnSurface}"/>
            <Setter Property="BorderBrush" Value="{StaticResource MaterialOutline}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Height" Value="56"/>
        </Style>
        
        <Style x:Key="MaterialProgressBar" TargetType="ProgressBar" BasedOn="{StaticResource MaterialDesignLinearProgressBar}">
            <Setter Property="Background" Value="{StaticResource MaterialSurfaceVariant}"/>
            <Setter Property="Foreground" Value="{StaticResource Primary}"/>
            <Setter Property="Height" Value="8"/>
        </Style>
        
        <Style x:Key="MaterialTextBlock" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource OnSurface}"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>
        
        <Style x:Key="MaterialTextBlockSecondary" TargetType="TextBlock" BasedOn="{StaticResource MaterialTextBlock}">
            <Setter Property="Foreground" Value="{StaticResource OnSurfaceVariant}"/>
        </Style>
        
        <Style x:Key="MaterialTextBlockPrimary" TargetType="TextBlock" BasedOn="{StaticResource MaterialTextBlock}">
            <Setter Property="Foreground" Value="{StaticResource Primary}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
        
        <!-- Title Bar Button Style -->
        <Style x:Key="TitleBarButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="{StaticResource OnSurfaceVariant}"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Width" Value="48"/>
            <Setter Property="Height" Value="48"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource MaterialSurfaceVariant}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Grid Background="{StaticResource MaterialBackground}">
        <Grid.RowDefinitions>
            <RowDefinition Height="64"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Modern Material Design Title Bar -->
        <Border Grid.Row="0" Background="{StaticResource MaterialSurface}" 
                Effect="{x:Null}" BorderThickness="0"
                MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
            <Grid Margin="24,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Title with Icon -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <materialDesign:PackIcon Kind="SwordCross" 
                                           Width="32" Height="32" 
                                           Foreground="{StaticResource Primary}"
                                           VerticalAlignment="Center" Margin="0,0,16,0"/>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="SWTOR STARTER" 
                                   FontSize="24" FontWeight="Bold" 
                                   Foreground="{StaticResource OnSurface}"
                                   FontFamily="{DynamicResource MaterialDesignHeadline6}"/>
                        <TextBlock Text="v2.0 - Material Design 3" 
                                   FontSize="12" 
                                   Foreground="{StaticResource OnSurfaceVariant}"
                                   FontFamily="{DynamicResource MaterialDesignCaption}"/>
                    </StackPanel>
                </StackPanel>
                
                <!-- Window Controls -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button x:Name="MinimizeButton" 
                            Style="{StaticResource TitleBarButton}"
                            Click="MinimizeButton_Click">
                        <materialDesign:PackIcon Kind="Minus" Width="20" Height="20"/>
                    </Button>
                    <Button x:Name="CloseButton" 
                            Style="{StaticResource TitleBarButton}"
                            Click="CloseButton_Click"
                            Foreground="{StaticResource Error}">
                        <materialDesign:PackIcon Kind="Close" Width="20" Height="20"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Main Content Area -->
        <ScrollViewer Grid.Row="1" 
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled"
                      Margin="24">
            <StackPanel>
                <!-- Top Section: Two Cards Side by Side -->
                <Grid Margin="0,0,0,24">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="24"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Left Card: Launch Game -->
                    <Border Grid.Column="0" Style="{StaticResource MaterialCard}">
                        <StackPanel>
                            <!-- Header -->
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,24" HorizontalAlignment="Center">
                                <materialDesign:PackIcon Kind="RocketLaunch" 
                                                       Width="28" Height="28" 
                                                       Foreground="{StaticResource Primary}"
                                                       VerticalAlignment="Center" Margin="0,0,16,0"/>
                                <TextBlock Text="SPIEL STARTEN" 
                                           FontSize="20" FontWeight="Bold" 
                                           Foreground="{StaticResource OnSurface}"
                                           FontFamily="{DynamicResource MaterialDesignHeadline6}"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                            
                            <!-- Description -->
                            <TextBlock Text="Klicken Sie auf 'START SWTOR' um das Spiel automatisch zu starten." 
                                       Style="{StaticResource MaterialTextBlockSecondary}"
                                       FontSize="16" 
                                       Margin="0,0,0,24"
                                       HorizontalAlignment="Center" 
                                       TextWrapping="Wrap"/>
                            
                            <!-- Launch Button and Timer Checkbox -->
                            <StackPanel Orientation="Horizontal" 
                                        HorizontalAlignment="Center" 
                                        Margin="0,0,0,16">
                                <Button x:Name="LaunchButton" 
                                        Style="{StaticResource MaterialButton}"
                                        Content="🚀 START SWTOR" 
                                        Height="60"
                                        FontSize="18"
                                        Margin="0,0,16,0"
                                        Click="LaunchButton_Click"/>
                                
                                <!-- Timer Checkbox -->
                                <StackPanel Orientation="Vertical" 
                                            VerticalAlignment="Center" 
                                            Margin="0,0,0,0">
                                    <CheckBox x:Name="AutoStartTimerCheckBox" 
                                              Content="TIMER" 
                                              Foreground="{StaticResource OnSurfaceVariant}"
                                              FontSize="12"
                                              FontWeight="Medium"
                                              Margin="0,0,0,4"
                                              Checked="AutoStartTimerCheckBox_Checked"
                                              Unchecked="AutoStartTimerCheckBox_Unchecked"/>
                                    
                                    <!-- Countdown Display -->
                                    <TextBlock x:Name="CountdownTextBlock" 
                                               Text="5" 
                                               Style="{StaticResource MaterialTextBlockPrimary}"
                                               FontSize="16"
                                               FontWeight="Bold"
                                               HorizontalAlignment="Center"
                                               Foreground="{StaticResource OnSurfaceVariant}"
                                               Visibility="Collapsed"
                                               Margin="0,2,0,0"/>
                                    
                                    <TextBlock Text="Auto-Start nach 5s" 
                                               Style="{StaticResource MaterialTextBlockSecondary}"
                                               FontSize="10" 
                                               HorizontalAlignment="Center"
                                               Foreground="{StaticResource OnSurfaceVariant}"/>
                                </StackPanel>
                            </StackPanel>
                            
                            <!-- Launch Status Text -->
                            <TextBlock x:Name="LaunchStatusText" 
                                       Style="{StaticResource MaterialTextBlockSecondary}"
                                       FontSize="14" 
                                       Margin="0,16,0,0"
                                       HorizontalAlignment="Center" 
                                       TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Right Card: Password Management -->
                    <Border Grid.Column="2" Style="{StaticResource MaterialCard}">
                        <StackPanel>
                            <!-- Header -->
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,24">
                                <materialDesign:PackIcon Kind="Lock" 
                                                       Width="28" Height="28" 
                                                       Foreground="{StaticResource Primary}"
                                                       VerticalAlignment="Center" Margin="0,0,16,0"/>
                                <TextBlock Text="PASSWORT VERWALTUNG" 
                                           FontSize="20" FontWeight="Bold" 
                                           Foreground="{StaticResource OnSurface}"
                                           FontFamily="{DynamicResource MaterialDesignHeadline6}"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                            
                            <!-- Password Input -->
                            <PasswordBox x:Name="PasswordBox" 
                                         Style="{StaticResource MaterialPasswordBox}"
                                         Margin="0,0,0,20"
                                         materialDesign:HintAssist.Hint="Passwort eingeben"/>
                            
                            <!-- Save Button -->
                            <Button x:Name="SavePasswordButton" 
                                    Style="{StaticResource MaterialButton}"
                                    Content="PASSWORT SPEICHERN"
                                    Margin="0,0,0,16"
                                    Click="SavePasswordButton_Click"/>
                            
                            <!-- Status Text -->
                            <TextBlock x:Name="PasswordStatusText" 
                                       Style="{StaticResource MaterialTextBlockSecondary}"
                                       FontSize="14" 
                                       HorizontalAlignment="Center" 
                                       Margin="0,0,0,16"
                                       TextWrapping="Wrap"/>
                            
                            <!-- Edit Password Button and Delete Password Button -->
                            <StackPanel Orientation="Horizontal" 
                                        HorizontalAlignment="Center" 
                                        Margin="0,0,0,16"
                                        Visibility="Collapsed"
                                        x:Name="PasswordButtonsPanel">
                                
                                <!-- Edit Password Button -->
                                <Button x:Name="EditPasswordButton" 
                                        Style="{StaticResource MaterialSecondaryButton}"
                                        Content="PASSWORT BEARBEITEN"
                                        Margin="0,0,16,0"
                                        Click="EditPasswordButton_Click"/>
                                
                                <!-- Delete Password Button (Red X) -->
                                <Button x:Name="DeletePasswordButton" 
                                        Style="{StaticResource MaterialSecondaryButton}"
                                        Width="40"
                                        Height="40"
                                        Margin="0,0,0,0"
                                        Background="{StaticResource Error}"
                                        Foreground="White"
                                        FontSize="18"
                                        FontWeight="Bold"
                                        Click="DeletePasswordButton_Click"
                                        ToolTip="Gespeichertes Passwort löschen">
                                    ×
                                </Button>
                            </StackPanel>
                            
                            <!-- Settings Button -->
                            <Button x:Name="SettingsButton" 
                                    Style="{StaticResource MaterialSecondaryButton}"
                                    Content="⚙️ EINSTELLUNGEN"
                                    Margin="0,0,0,0"
                                    HorizontalAlignment="Center" 
                                    Click="SettingsButton_Click"/>
                        </StackPanel>
                    </Border>
                </Grid>
                
                <!-- Bottom Section: Status Overview -->
                <Border x:Name="StatusSection" Style="{StaticResource MaterialCard}">
                    <StackPanel>
                        <!-- Header -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,24">
                            <materialDesign:PackIcon Kind="MonitorDashboard" 
                                                   Width="24" Height="24" 
                                                   Foreground="{StaticResource Primary}"
                                                   VerticalAlignment="Center" Margin="0,0,16,0"/>
                            <TextBlock Text="SYSTEM STATUS" 
                                       FontSize="18" FontWeight="Bold" 
                                       Foreground="{StaticResource OnSurface}"
                                       FontFamily="{DynamicResource MaterialDesignHeadline6}"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                        
                        <!-- Status Grid -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="24"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="24"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- System Info -->
                            <StackPanel Grid.Column="0">
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                                    <materialDesign:PackIcon Kind="DesktopClassic" 
                                                           Width="20" Height="20" 
                                                           Foreground="{StaticResource Primary}"
                                                           VerticalAlignment="Center" Margin="0,0,8,0"/>
                                    <TextBlock Text="SYSTEM" 
                                               Style="{StaticResource MaterialTextBlockPrimary}"
                                               FontSize="16" FontWeight="SemiBold" 
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                                <TextBlock x:Name="SystemInfoText" 
                                           Style="{StaticResource MaterialTextBlockSecondary}"
                                           FontSize="14" 
                                           TextWrapping="Wrap" 
                                           Text="Lade System-Informationen..."/>
                            </StackPanel>
                            
                            <!-- Connection Status -->
                            <StackPanel Grid.Column="2">
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                                    <materialDesign:PackIcon Kind="Connection" 
                                                           Width="20" Height="20" 
                                                           Foreground="{StaticResource Primary}"
                                                           VerticalAlignment="Center" Margin="0,0,8,0"/>
                                    <TextBlock Text="VERBINDUNG" 
                                               Style="{StaticResource MaterialTextBlockPrimary}"
                                               FontSize="16" FontWeight="SemiBold" 
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                                <StackPanel x:Name="ConnectionStatusPanel">
                                    <!-- Status Items werden dynamisch hinzugefügt -->
                                </StackPanel>
                            </StackPanel>
                            
                            <!-- Performance -->
                            <StackPanel Grid.Column="4">
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                                    <materialDesign:PackIcon Kind="LightningBolt" 
                                                           Width="20" Height="20" 
                                                           Foreground="{StaticResource Primary}"
                                                           VerticalAlignment="Center" Margin="0,0,8,0"/>
                                    <TextBlock Text="LEISTUNG" 
                                               Style="{StaticResource MaterialTextBlockPrimary}"
                                               FontSize="16" FontWeight="SemiBold" 
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                                <TextBlock x:Name="PerformanceText" 
                                           Style="{StaticResource MaterialTextBlockSecondary}"
                                           FontSize="14" 
                                           TextWrapping="Wrap" 
                                           Text="Überwache Leistung..."/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
